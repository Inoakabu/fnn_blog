<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
        <link rel="stylesheet" type"text/css" href="/stylesheets/index.css">
    </head>
    <body>
        <div class="header">
            <h2>Fabbys News Network</h2>
        </div>
        <div class="flex">
            <div class="left">
                <form action="/addpost" method="POST">
                    <ul class="flex-outer">
                        <li>
                            <label for="title">Title</label>
                            <input type="text" name="blogposttitle"><br />
                        </li>
                        <li>
                            <label for="post">Post</label>
                            <textarea type="textarea" name="blogpost"></textarea><br />
                        </li>
                        <li>
                            <button rows="6" type="submit">Submit</button>
                        </li>
                    </ul>
                </form>

                <% for(var i=0; i<fnn_blog.length; i++) {%>
                    <div class="fnn_blog">
                        <form name = "updateForm" >
                            <form name = "deleteForm" method="POST" action = "/deletePost">
                                        <h3><%= fnn_blog[i].blogposttitle %></h3>
                                        <p><%= fnn_blog[i].blogpost %></p>
                                <input type="text" name="deleteBlogPost" value="<%= fnn_blog[i].blogposttitle %>">
                                <button id="delete"> Delete </button>
                            </form>
                            <button id="updateModal-Btn"> Update </button>
                            <div id="updateModal" class="modal">
                                <div class="updateModal-content">
                                    <span class="close">&times;</span>
                                    <form name = "updateForm" method="POST" action = "/updatePost">
                                        <table>
                                        <tr>
                                            <td><input type="hidden" name="findBlogPost" value="<%= fnn_blog[i].blogposttitle %>"></td>
                                        </tr>
                                            <td>Update:</td>
                                            <td><input typ="text" name="replaceBlogPostTitle"></td>
                                            <td><input typ="text" name="replaceBlogPost"></td>
                                        <tr>
                                            <button id="update"> Update </button>
                                        </tr>
                                        </table>
                                    </form>
                                </div>
                            </div>
                        </form>
                    </div>
                <% } %>
            </div>
            <div class="right">
                    <div class="card">
                      <h2>About Us</h2>
                      <p>We are Fabbys News Network ... and ... we are. Retarded
                      </p>
                    </div>
                    <div class="card">

                    </div>
                    <div class="card">
                      <h3>Follow Me</h3>
                      <p>Some community shit posting fuck duck</p>
                    </div>
                </div>
        </div>

        <form name = "updateForm" method="POST" action = "/updatePost">
            <table>
            <tr>
                <td>Find:</td>
                <td><input type="text" name="findBlogPost"></td>
            </tr>
                <td>Replace:</td>
                <td><input typ="text" name="replaceBlogPostTitle"></td>
                <td><input typ="text" name="replaceBlogPost"></td>
            <tr>
                <button id="update"> Update </button>
            </tr>
            </table>
        </form>

        <form name = "deleteForm" method="POST" action = "/deletePost">
            <table>
            <tr>
                <td>Delete:</td>
                <td><input type="text" name="deleteBlogPost"></td>
                <button id="delete"> Delete </button>
            </tr>
            </table>
        </form>

        <!-- ... -->
        <script src="main.js"></script>
        <script src="modal.js"></script>
    </body>
</html>