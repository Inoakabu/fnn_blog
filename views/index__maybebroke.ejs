<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
        <link rel="stylesheet" type"text/css" href="/stylesheets/index.css">
        <script src="main.js"></script>
    </head>
    <body>
        <div class="header">
            <h2>Fabbys News Network</h2>
        </div>
        <div class="flex">
            <!-- Posting -->
            <div class="left">
                <form action="/addpost" method="POST">
                    <ul class="flex-outer">
                        <li>
                            <label for="title">Title</label>
                            <input type="text" name="blogposttitle"><br />
                        </li>
                        <li>
                            <label for="post">Post</label>
                            <textarea type="textarea" name="blogpost"></textarea><br />
                        </li>
                        <li>
                            <button rows="6" type="submit">Submit</button>
                        </li>
                    </ul>
                </form>
                <!-- Show all Posts in DB (no paggi) -->
                <% for(var i=0; i<fnn_blog.length; i++) {%>
                    <div class="fnn_blog">
                        <form class="post" name="updateForm" method="POST" action="/updatePost">
                            <h3><%= fnn_blog[i].blogposttitle %></h3>
                            <p><%= fnn_blog[i].blogpost %></p>
                            <button id="update">UpdateTest</button>
                            <button id="updatePost">Update</button>
                        </form>
                    </div>
                <% } %>

            </div>
            <!-- information stuff / calender and map goes here -->
            <div class="right">
                    <div class="card">
                      <h2>About Us</h2>
                      <p>We are Fabbys News Network ... and ... we are. Retarded
                      </p>
                    </div>
                    <div class="card">
                    
                    </div>
                    <div class="card">
                      <h3>Follow Me</h3>
                      <p>Some community shit posting fuck duck</p>
                    </div>
                </div>
        </div>
        <script src="main.js"></script>
        <script src="modal.js"></script>
    </body>
</html>