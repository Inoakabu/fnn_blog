<div class="post">
    <div>
        <h2><%= post.blogposttitle %></h2>
        <p><%= post.blogpost %></p>
        <h4>Comments:</h4>
        <%if (isLoggedIn) { %>
            <%- include('addcomment', { post: post }); %>
         <% } %>
        <% post.comments.forEach(function(comment) { %>
            <%- include('comment', {comment:comment}); %>
        <% }); %>
    </div>
    <%if (isLoggedIn) { %>
    <div class="post-helper">
        <!-- <code><%= post.uid %></code> -->
        <div class="flex">
            <%- include('modal', {post: post}); %>
            <%- include('delete', {post: post}); %>
        </div>
    </div>
    <% } %>
</div>